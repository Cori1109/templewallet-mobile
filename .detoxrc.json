{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "skipLegacyWorkersInjection": true,
  "apps": {
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/TempleWallet.app",
      "build": "set -o pipefail && xcodebuild -workspace ios/TempleWallet.xcworkspace -scheme TempleWallet -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -quiet"
    },
    "android.debug": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "testBinaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease -DtestBuildType=release && cd .."
    }
  },
  "devices": {
    "ios.simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 11"
      }
    },
    "android.emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_4_API_30"
      }
    }
  },
  "configurations": {
    "ios.sim.debug": {
      "device": "ios.simulator",
      "app": "ios.debug"
    },
    "android.emu.debug": {
      "device": "android.emulator",
      "app": "android.debug"
    }
  }
}
